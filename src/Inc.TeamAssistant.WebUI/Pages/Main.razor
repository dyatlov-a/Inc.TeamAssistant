@page "/"
@page "/en"
@page "/ru"

@inject IVideoService VideoService

@if (!VideoService.IsServer)
{
    <video autoplay muted="muted" loop class="main__video" id="@_videoId">
        <source src="source-tree-02.mp4" type="video/mp4">
        Your browser does not support HTML5 video.
    </video>
}

<section id="feedback" class="feedback white">
    <div class="feedback__container">
        <Feedback/>
    </div>
</section>

<InlineDialog />

@code {

    private readonly string _videoId = "source-tree-02";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
            await VideoService.Play(_videoId);
    }
}