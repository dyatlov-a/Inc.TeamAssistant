@inherits PersistentComponent<ReviewerModuleViewModel>

<DashboardWidget Title="@ViewModel.ReviewTotalStatsWidgetTitle" HasChart="true">
    <Content>
        <ReviewTotalStatsWidget TeamId="TeamId" Depth="StatsDepth" />
    </Content>
</DashboardWidget>
<DashboardWidget Title="@ViewModel.LastTasksWidgetTitle">
    <Content>
        <LastTasksWidget TeamId="TeamId" Count="TasksCount" />
    </Content>
</DashboardWidget>
<DashboardWidget Title="@ViewModel.ReviewAverageStatsWidgetTitle" HasChart="true">
    <Content>
        <ReviewAverageStatsWidget TeamId="TeamId" Depth="StatsDepth" />
    </Content>
</DashboardWidget>

@code {
    [Parameter, EditorRequired]
    public Guid TeamId { get; set; }
    
    [Parameter, EditorRequired]
    public int StatsDepth { get; set; }
    
    [Parameter, EditorRequired]
    public int TasksCount { get; set; }

    protected override Task<ReviewerModuleViewModel> Initialize(Dictionary<string, string> resources)
    {
        return Task.FromResult(new ReviewerModuleViewModel(
            resources[Messages.Dashboard_ReviewTotalStatsWidgetTitle],
            resources[Messages.Dashboard_LastTasksWidgetTitle],
            resources[Messages.Dashboard_ReviewAverageStatsWidgetTitle]));
    }
}