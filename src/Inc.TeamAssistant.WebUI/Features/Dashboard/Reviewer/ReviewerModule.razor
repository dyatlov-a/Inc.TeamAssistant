@inject ResourcesManager Resources

<DashboardWidget Title="@Resources[Messages.Dashboard_ReviewTotalStatsWidgetTitle]" HasChart="true">
    <Content>
        <ReviewTotalStatsWidget TeamId="TeamId" />
    </Content>
</DashboardWidget>
<DashboardWidget Title="@Resources[Messages.Dashboard_LastTasksWidgetTitle]">
    <Content>
        <ReviewHistoryWidget TeamId="TeamId" />
    </Content>
</DashboardWidget>
<DashboardWidget Title="@Resources[Messages.Dashboard_ReviewAverageStatsWidgetTitle]" HasChart="true">
    <Content>
        <ReviewAverageStatsWidget TeamId="TeamId" />
    </Content>
</DashboardWidget>

@code {
    [Parameter, EditorRequired]
    public Guid TeamId { get; set; }
}