@inject ResourcesManager ResourcesManager

@if (_isOpen)
{
    <div class="confirm-dialog-bg"></div>
    <div class="confirm-dialog">
        <div class="confirm-dialog__body">
            <div class="confirm-dialog__content">
                @Content
            </div>
            <div class="confirm-dialog__actions">
                <button type="button" class="button button_light confirm-dialog__button" @onclick="() => Close(OnConfirm)">
                    @_viewModel.ConfirmText
                </button>
                <button type="button" class="button button_dark confirm-dialog__button" @onclick="() => Close()">
                    @_viewModel.RejectText
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter, EditorRequired]
    public RenderFragment Content { get; set; } = default!;
    
    [Parameter, EditorRequired]
    public EventCallback OnConfirm { get; set; }
    
    private bool _isOpen;
    private ConfirmDialogViewModel _viewModel = ConfirmDialogViewModel.Empty;

    protected override void OnInitialized()
    {
        _viewModel = new ConfirmDialogViewModel(
            ResourcesManager[Messages.ConfirmDialog_Yes],
            ResourcesManager[Messages.ConfirmDialog_No]);
    }

    public void Open()
    {
        _isOpen = true;
        
        StateHasChanged();
    }

    private async Task Close(EventCallback? confirm = null)
    {
        _isOpen = false;
        
        if (confirm.HasValue)
            await confirm.Value.InvokeAsync();
        else
            StateHasChanged();
    }
}