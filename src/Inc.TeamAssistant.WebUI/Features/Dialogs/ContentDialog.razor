@inject ResourcesManager Resources

@if (_isOpen)
{
    <div class="content-dialog-bg"></div>
    <div class="content-dialog">
        <div class="content-dialog__body @CssClass">
            <div class="content-dialog__header">
                <h2 class="content-dialog__header-text">@Title</h2>
                <div class="content-dialog__actions">
                    <button type="button" class="button button_light" @onclick="Close">
                        @Resources[Messages.ContentDialog_Close]
                    </button>
                </div>
            </div>
            <div class="content-dialog__content">
                @Content
            </div>
        </div>
    </div>
}

@code {
    [Parameter, EditorRequired]
    public string Title { get; set; } = default!;
    
    [Parameter, EditorRequired]
    public RenderFragment Content { get; set; } = default!;
    
    [Parameter, EditorRequired]
    public bool HasChart { get; set; }
    
    private bool _isOpen;

    public void Open()
    {
        _isOpen = true;
        
        StateHasChanged();
    }
    
    private void Close()
    {
        _isOpen = false;
        
        StateHasChanged();
    }
    
    private string CssClass => HasChart ? "content-dialog__body_has-chart" : "content-dialog__body_no-chart";
}