@using Inc.TeamAssistant.Primitives.Languages

@inject IRenderContext RenderContext

<HeadContent>
    <meta property="og:locale" content="@GetLocale(_languageId)">
    <meta property="og:title" content="@Model.Title">
    <meta property="og:description" content="@Model.Description">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://team-assistant.online">
    <meta property="og:site_name" content="team-assistant.online">
    <meta property="og:image" content="https://team-assistant.online/og/@(Model.ImageName)_@(_languageId.Value).png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="team-assistant.online">
    <meta name="twitter:title" content="@Model.Title">
    <meta name="twitter:description" content="@Model.Description">
    <meta name="twitter:image" content="https://team-assistant.online/og/@(Model.ImageName)_@(_languageId.Value).png">
    
    <meta property="vk:image" content="https://team-assistant.online/og/@(Model.ImageName)_@(_languageId.Value).png">
</HeadContent>

@code {
    [Parameter, EditorRequired]
    public OpenGraphViewModel Model { get; set; } = default!;

    private LanguageId _languageId = default!;

    protected override void OnInitialized()
    {
        var currentLanguage = RenderContext.GetCurrentLanguageId();

        _languageId = currentLanguage.Language;
    }
    
    private string GetLocale(LanguageId languageId) => $"{languageId.Value.ToLower()}_{languageId.Value.ToUpper()}";
}