<div class="estimate__card">
    <div class="estimate__card__header">
        <img src="/photos/@PersonId" alt="user avatar" class="estimate__card__avatar" />
    </div>
    <div class="estimate__card__content">
        <h3 class="estimate__card__name">@Name</h3>
        @if (!string.IsNullOrWhiteSpace(Value))
        {
            <span class="story__value">@Value</span>
        }
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public long PersonId { get; set; }
    
    [Parameter, EditorRequired]
    public string Name { get; set; } = default!;
    
    [Parameter]
    public string? Value { get; set; }
}