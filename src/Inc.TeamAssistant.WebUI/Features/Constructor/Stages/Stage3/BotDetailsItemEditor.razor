@inject IStringLocalizer<ConstructorResources> Localizer

<FormFieldSet
    FieldId="@BotNameId"
    Label="@MessageWithLanguage(Localizer["BotName"], Item.LanguageId)">
    <InputSingleLine FieldId="@BotNameId" @bind-Value="Item.Name" />
    <ValidationMessage For="@(() => Item.Name)"/>
</FormFieldSet>
<FormFieldSet
    FieldId="@BotShortDescriptionId"
    Label="@MessageWithLanguage(Localizer["BotShortDescription"], Item.LanguageId)">
    <InputSingleLine FieldId="@BotShortDescriptionId" @bind-Value="Item.ShortDescription" />
    <ValidationMessage For="@(() => Item.ShortDescription)"/>
</FormFieldSet>
<FormFieldSet
    FieldId="@BotDescriptionId"
    Label="@MessageWithLanguage(Localizer["BotDescription"], Item.LanguageId)">
    <InputMultiLines FieldId="@BotDescriptionId" @bind-Value="Item.Description" />
    <ValidationMessage For="@(() => Item.Description)"/>
</FormFieldSet>

@code {
    [Parameter, EditorRequired]
    public BotDetailsItemFormModel Item { get; set; } = default!;
    
    private string BotNameId => $"bot-name-{Item.LanguageId}";
    private string BotShortDescriptionId => $"bot-short-description-{Item.LanguageId}";
    private string BotDescriptionId => $"bot-description-{Item.LanguageId}";
    
    private string MessageWithLanguage(string message, string languageCode) => $"{message} {languageCode}";
}