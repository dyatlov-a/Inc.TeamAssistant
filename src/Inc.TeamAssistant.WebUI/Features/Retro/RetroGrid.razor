<Loading State="State" Retry="Retry">
    <div class="main-content">
        <div class="main-content__container">
            <h1 class="main-content__header">Доска для ретро команды @Team.Name</h1>
            <p class="main-content__text">Вым необходимо описать все беспокоящие вас проблемы и предложения. На следующей ретроспективе мы совместно все обсудим и зафиксируем решения. До начала ретроспективы карточки никому недоступны кроме их автора.</p>
            <div class="retro-grid">
                <div class="retro-grid__columns">
                    @foreach (var column in Columns.OrderBy(c => c.Type))
                    {
                        <div class="retro-grid__column">
                            <Panel Header="@column.Name" IsOpen="true">
                                <Actions>
                                    <Button OnClick="() => ItemCreatedEmit(column.Type)">Добавить</Button>
                                </Actions>
                                <Content>
                                    <div class="retro-grid__column-items">
                                        @foreach (var item in column.Items.Values.OrderBy(i => i.Created))
                                        {
                                            <RetroItem
                                                Value="item"
                                                ValueChanged="ItemChangedEmit"
                                                BackgroundColor="@column.ItemColor" />
                                        }
                                    </div>
                                </Content>
                            </Panel>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</Loading>

@code {
    /// <summary>
    /// Current Team.
    /// </summary>
    [Parameter, EditorRequired]
    public TenantTeamDto Team { get; set; } = default!;
    
    /// <summary>
    /// Component state.
    /// </summary>
    [Parameter, EditorRequired]
    public LoadingState State { get; set; } = default!;
    
    /// <summary>
    /// Retro columns.
    /// </summary>
    [Parameter, EditorRequired]
    public IEnumerable<RetroColumnViewModel> Columns { get; set; } = default!;
    
    /// <summary>
    /// Action for retry.
    /// </summary>
    [Parameter, EditorRequired]
    public Func<Task> Retry { get; set; } = default!;
    
    /// <summary>
    /// Create retro item callback.
    /// </summary>
    [Parameter, EditorRequired]
    public EventCallback<int> ItemCreated { get; set; }
    
    /// <summary>
    /// Change retro item callback.
    /// </summary>
    [Parameter, EditorRequired]
    public EventCallback<RetroItemViewModel> ItemChanged { get; set; }
    
    private async Task ItemCreatedEmit(int type) => await ItemCreated.InvokeAsync(type);
    
    private async Task ItemChangedEmit(RetroItemViewModel item) => await ItemChanged.InvokeAsync(item);
}