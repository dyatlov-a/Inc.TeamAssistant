@attribute [Stories("Features/AcceptCookieDialog")]

<Stories TComponent="AcceptCookieDialog">
    <Story Name="Default">
        <Template>
            <AcceptCookieDialog @ref="_dialog" />
        </Template>
    </Story>
</Stories>

@code {
    private AcceptCookieDialog? _dialog;

    protected override Task OnAfterRenderAsync(bool firstRender) => _dialog?.IsAccepted() ?? Task.CompletedTask;
}