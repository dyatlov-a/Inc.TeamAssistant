@attribute [Stories("Components/Button")]

<Stories TComponent="Button">
    <ArgType For="c => c.ButtonMode" Control="ControlType.Select" />
    <ArgType For="c => c.ButtonType" Control="ControlType.Select" />
    <Story Name="Primary" Layout="typeof(DarkLayout)">
        <Template>
            <Button @attributes="context.Args">
                <Content>@_text</Content>
            </Button>
        </Template>
    </Story>
    <Story Name="Secondary" Layout="typeof(LightLayout)">
        <Arguments>
            <Arg For="c => c.ComponentStyle" Value="ComponentStyle.Secondary" />
        </Arguments>
        <Template>
            <Button @attributes="context.Args">
                <Content>@_text</Content>
            </Button>
        </Template>
    </Story>
    <Story Name="Disabled" Layout="typeof(DarkLayout)">
        <Arguments>
            <Arg For="c => c.IsDisabled" Value="true" />
        </Arguments>
        <Template>
            <Button @attributes="context.Args">
                <Content>@_text</Content>
            </Button>
        </Template>
    </Story>
    <Story Name="Small" Layout="typeof(DarkLayout)">
        <Arguments>
            <Arg For="c => c.ButtonMode" Value="ButtonMode.Small" />
        </Arguments>
        <Template>
            <Button @attributes="context.Args">
                <Content>@_text</Content>
            </Button>
        </Template>
    </Story>
</Stories>

@code {
    private readonly string _text = "Button";
}