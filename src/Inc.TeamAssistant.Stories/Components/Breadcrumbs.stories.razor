@attribute [Stories("Components/Breadcrumbs")]

<Stories TComponent="Breadcrumbs" Layout="typeof(LightLayout)">
    <Story Name="Default">
        <Template>
            <Breadcrumbs Items="CreateItems()" @attributes="context.Args" />
        </Template>
    </Story>
    <Story Name="Selected">
        <Template>
            <Breadcrumbs Items="CreateItems(selected: true)" @attributes="context.Args" />
        </Template>
    </Story>
</Stories>

@code {
    private IReadOnlyCollection<BreadcrumbItem> CreateItems(bool selected = false)
    {
        return [
            new("AssessmentSession", Selected: selected, Href: string.Empty),
            new(DateTimeOffset.UtcNow.ToString("yyyy.MM.dd"), Selected: false, Href: string.Empty)
        ];
    }
}