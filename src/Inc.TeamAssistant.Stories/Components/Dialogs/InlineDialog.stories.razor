@attribute [Stories("Components/Dialogs/InlineDialog")]

<Stories TComponent="InlineDialog">
    <Story Name="WithAction">
        <Template>
            <InlineDialog
                IsOpen="_isOpen"
                Text="@Text"
                ButtonText="Accept"
                HasAction="true"
                OnAction="@(() => _isOpen = false)" />
        </Template>
    </Story>
    <Story Name="WithoutAction">
        <Template>
            <InlineDialog
                IsOpen="_isOpen"
                Text="@Text"
                ButtonText="Accept"
                HasAction="false"
                OnAction="@(() => _isOpen = false)" />
        </Template>
    </Story>
</Stories>

@code {
    private bool _isOpen = true;
    private const string Text = "We use cookies to make your experience on our site as convenient as possible. By continuing to browse our site, you are agreeing to the use of these cookies";
}