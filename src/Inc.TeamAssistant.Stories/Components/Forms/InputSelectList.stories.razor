@attribute [Stories("Components/Forms/InputSelectList")]

<Stories TComponent="InputSelectList<DayOfWeek, DayOfWeek>" Layout="typeof(DarkLayout)">
    <Story Name="Default">
        <Template>
            <InputSelectList
                FieldId="@_fieldId"
                @bind-Value="_value"
                Items="Enum.GetValues<DayOfWeek>()"
                TitleSelector="i => i.ToString()"
                ValueSelector="i => i"
                @attributes="context.Args" />
        </Template>
    </Story>
    <Story Name="WithEmptyValue">
        <Arguments>
            <Arg For="c => c.HasEmptyValue" Value="true" />
        </Arguments>
        <Template>
            <InputSelectList
                FieldId="@_fieldId"
                @bind-Value="_value"
                Items="Enum.GetValues<DayOfWeek>()"
                TitleSelector="i => i.ToString()"
                ValueSelector="i => i"
                @attributes="context.Args"/>
        </Template>
    </Story>
    <Story Name="Disabled">
        <Arguments>
            <Arg For="c => c.IsDisabled" Value="true" />
        </Arguments>
        <Template>
            <InputSelectList
                FieldId="@_fieldId"
                @bind-Value="_value"
                Items="Enum.GetValues<DayOfWeek>()"
                TitleSelector="i => i.ToString()"
                ValueSelector="i => i"
                @attributes="context.Args"/>
        </Template>
    </Story>
</Stories>

@code {
    private readonly string _fieldId = "input-select-list";
    private DayOfWeek? _value;
}