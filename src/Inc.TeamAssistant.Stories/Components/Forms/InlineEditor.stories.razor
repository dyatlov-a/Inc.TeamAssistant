@attribute [Stories("Components/Forms/InputInlineEditor")]

<Stories TComponent="InputInlineEditor">
    <Story Name="Default">
        <Template>
            <InputInlineEditor
                Id="_editableId"
                CanEdit="true"
                Value="@_editableValue" 
                ValueExpression="() => _editableValue"
                ValueChanged="@(v => _editableValue = v)" />
        </Template>
    </Story>
    <Story Name="ReadOnly">
        <Template>
            <InputInlineEditor
                Id="_readOnlyId"
                CanEdit="false"
                Value="@_readOnlyValue" 
                ValueExpression="() => _readOnlyValue"
                ValueChanged="@(v => _readOnlyValue = v)" />
        </Template>
    </Story>
</Stories>

@code {
    private readonly Guid _editableId = Guid.NewGuid();
    private string? _editableValue = "Editable text";
    
    private readonly Guid _readOnlyId = Guid.NewGuid();
    private string? _readOnlyValue = "Readonly text";
}