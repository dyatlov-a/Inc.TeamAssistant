@attribute [Stories("Components/Forms/FormSection")]

<Stories TComponent="FormSection" Layout="typeof(DarkLayout)">
    <Story Name="Default">
        <Template>
            <FormSection Title="@_title" HelpText="@_helpText" @attributes="context.Args">
                <FormFieldSet FieldId="@_fieldId" Label="Text field">
                    <InputSingleLine FieldId="@_fieldId" @bind-Value="_value" IsDisabled="false" />
                </FormFieldSet>
            </FormSection>
        </Template>
    </Story>
    <Story Name="AsRows">
        <Arguments>
            <Arg For="c => c.AsRows" Value="true" />
        </Arguments>
        <Template>
            <FormSection Title="@_title" HelpText="@_helpText" @attributes="context.Args">
                <FormFieldSet FieldId="@_fieldId" Label="Text field">
                    <InputSingleLine FieldId="@_fieldId" @bind-Value="_value" IsDisabled="false" />
                </FormFieldSet>
            </FormSection>
        </Template>
    </Story>
</Stories>

@code {
    private readonly string _title = "Form section";
    private readonly string _helpText = "Description";
    private readonly string _fieldId = "input-single-line";
    private string _value = string.Empty;
}