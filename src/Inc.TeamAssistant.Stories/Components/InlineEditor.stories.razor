@attribute [Stories("Components/InlineEditor")]

<Stories TComponent="InlineEditor">
    <Story Name="Default">
        <Template>
            <InlineEditor
                Id="_editableId"
                CanEdit="true"
                DebounceDelay="_debounceDelay"
                Value="@_editableValue" 
                ValueExpression="() => _editableValue"
                ValueChanged="@(v => _editableValue = v)" />
        </Template>
    </Story>
    <Story Name="ReadOnly">
        <Template>
            <InlineEditor
                Id="_readOnlyId"
                CanEdit="false"
                DebounceDelay="_debounceDelay"
                Value="@_readOnlyValue" 
                ValueExpression="() => _readOnlyValue"
                ValueChanged="@(v => _readOnlyValue = v)" />
        </Template>
    </Story>
</Stories>

@code {
    private readonly int _debounceDelay = 500;
    
    private readonly Guid _editableId = Guid.NewGuid();
    private string? _editableValue = string.Empty;
    
    private readonly Guid _readOnlyId = Guid.NewGuid();
    private string? _readOnlyValue = string.Empty;
}