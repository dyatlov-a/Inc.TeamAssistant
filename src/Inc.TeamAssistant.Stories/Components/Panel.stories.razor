@attribute [Stories("Components/Panel")]

<Stories TComponent="Panel" Layout="typeof(DarkLayout)">
    <Story Name="Default">
        <Template>
            <Panel Header="@_title" @attributes="context.Args">
                <Actions>@_button</Actions>
                <Content>@_content</Content>
            </Panel>
        </Template>
    </Story>
    <Story Name="Open">
        <Arguments>
            <Arg For="c => c.IsOpen" Value="true" />
        </Arguments>
        <Template>
            <Panel Header="@_title" @attributes="context.Args">
                <Actions>@_button</Actions>
                <Content>@_content</Content>
            </Panel>
        </Template>
    </Story>
</Stories>

@code {
    private readonly string _title = "Panel title";
    private readonly string _button = "Action";
    private readonly string _content = "Content";
}